---
name: loggr-system-metrics-agent-windows

templates:
  pre-start.ps1.erb: bin/pre-start.ps1
  system_metrics_agent_ca.crt.erb: config/certs/system_metrics_agent_ca.crt
  system_metrics_agent.crt.erb: config/certs/system_metrics_agent.crt
  system_metrics_agent.key.erb: config/certs/system_metrics_agent.key
  prom_scraper_config.yml.erb: config/prom_scraper_config.yml

packages:
- system-metrics-agent-windows

properties:
  enabled:
    description: |
      Enables the system metrics agent
    default: true
  metrics_port:
    description: |
      Port where the /metrics endpoint is served
    default: 9100
  use_prom_scraper:
    description: "Use prom scraper to scrape metrics. Set false to use the deprecated bosh-system-metrics-scraper"
    default: false
  bosh_metrics_forwarder_metrics_only:
    description: "reduces metrics emitted only to the metrics emitted by the bosh system metrics forwarder"
    default: false

  sample_interval:
    description: |
      How often to record the system metrics
    default: 1m

  system_metrics:
    tls:
      ca_cert:
        description: |
          TLS prom scraper CA certificate. It is required for key/cert
          verification.
      cert:
        description: "TLS certificate for system metrics agent signed by the prom scraper CA"
      key:
        description: "TLS private key for system metrics agent signed by the prom scraper ca"
      server_name:
        description: "common name for certificate for metrics"
        default: system_metrics_agent
